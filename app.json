{
  "expo": {
    "name": "Mello",
    "slug": "mello",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "mello",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#f8f7ff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "health.melloai.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Mello needs microphone access for voice conversations.",
        "NSSpeechRecognitionUsageDescription": "Mello uses speech recognition to understand you better."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#f8f7ff"
      },
      "package": "health.melloai.app",
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.POST_NOTIFICATIONS"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-av",
        {
          "microphonePermission": "Mello needs microphone access for voice conversations."
        }
      ],
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Mello needs microphone access for voice conversations.",
          "speechRecognitionPermission": "Mello uses speech recognition to understand you better."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#FF6B35"
        }
      ],
      "expo-web-browser",
      "@react-native-google-signin/google-signin"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "841494e5-4e32-47f3-a891-9373d197e851"
      }
    }
  }
}
